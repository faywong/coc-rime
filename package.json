{
  "name": "coc-rime",
  "version": "0.1.2-alpha",
  "description": "Rime input method integration of coc.nvim",
  "author": "Tony Fettes <feihaoxiang2014@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "rime"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "build": "node esbuild.js",
    "prepare": "npm-run-all clean build"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.2",
    "@types/follow-redirects": "^1.13.0",
    "@types/mkdirp": "^0.5.2",
    "follow-redirects": "^1.7.0",
    "mkdirp": "^0.5.1",
    "ts-loader": "^8.0.2",
    "tunnel": "^0.0.6",
    "vscode-languageserver-protocol": "^3.14.1",
    "vscode-languageserver-types": "^3.14.0",
    "vscode-languageserver-textdocument": "^1.0.1",
    "async-mutex": "^0.2.6"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-rime configuration",
      "properties": {
        "rime.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-rime extension"
        },
        "rime.schemaId": {
          "type": "string",
          "default": "luna_pinyin",
          "description": "Rime schema selected when startup"
        },
        "rime.priority": {
          "type": "number",
          "default": 0,
          "description": "Priority of Rime completion source"
        },
        "rime.binaryPath": {
          "type": "string",
          "default": "/usr/bin/rime-cli",
          "description": "Path of binary executive file of rime-cli"
        }
      }
    },
    "commands": [
      {
        "command": "rime.enable",
        "title": "Enable the Rime source"
      },
      {
        "command": "rime.disable",
        "title": "Disable the Rime source"
      },
      {
        "command": "rime.toggle",
        "title": "Toggle the Rime source"
      }
    ]
  }
}
